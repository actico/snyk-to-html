{
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "chore",
            "release": "patch"
          }
        ],
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES"
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES"
          ]
        }
      }
    ]
  ],
  "prepare": [
    "@semantic-release/npm",
    {
      "//": "build the alpine, macos, linux and windows binaries",
      "path": "@semantic-release/exec",
      "cmd": "npm i -g pkg@5.8.1 && pkg . --options max_old_space_size=32768 -t node14-alpine-x64,node14-linux-x64,node14-macos-x64,node14-win-x64"
    },
    {
      "//": "shasum all binaries",
      "path": "@semantic-release/exec",
      "cmd": "shasum -a 256 actico-snyk-to-html-linux > actico-snyk-to-html-linux.sha256 && shasum -a 256 actico-snyk-to-html-macos > actico-snyk-to-html-macos.sha256 && shasum -a 256 actico-snyk-to-html-win.exe > actico-snyk-to-html-win.exe.sha256 && shasum -a 256 actico-snyk-to-html-alpine > actico-snyk-to-html-alpine.sha256"
    }
  ],
  "publish": [
    "@semantic-release/npm",
    {
      "path": "@semantic-release/github",
      "assets": [
        {
          "path": "./actico-snyk-to-html-linux",
          "name": "actico-snyk-to-html-linux",
          "label": "actico-snyk-to-html-linux"
        },
        {
          "path": "./actico-snyk-to-html-linux.sha256",
          "name": "actico-snyk-to-html-linux.sha256",
          "label": "actico-snyk-to-html-linux.sha256"
        },
        {
          "path": "./actico-snyk-to-html-macos",
          "name": "actico-snyk-to-html-macos",
          "label": "actico-snyk-to-html-macos"
        },
        {
          "path": "./actico-snyk-to-html-macos.sha256",
          "name": "actico-snyk-to-html-macos.sha256",
          "label": "actico-snyk-to-html-macos.sha256"
        },
        {
          "path": "./actico-snyk-to-html-win.exe",
          "name": "actico-snyk-to-html-win.exe",
          "label": "actico-snyk-to-html-win.exe"
        },
        {
          "path": "./actico-snyk-to-html-win.exe.sha256",
          "name": "actico-snyk-to-html-win.exe.sha256",
          "label": "actico-snyk-to-html-win.exe.sha256"
        },
        {
          "path": "./actico-snyk-to-html-alpine",
          "name": "actico-snyk-to-html-alpine",
          "label": "actico-snyk-to-html-alpine"
        },
        {
          "path": "./actico-snyk-to-html-alpine.sha256",
          "name": "actico-snyk-to-html-alpine.sha256",
          "label": "actico-snyk-to-html-alpine.sha256"
        }
      ]
    }
  ]
}
